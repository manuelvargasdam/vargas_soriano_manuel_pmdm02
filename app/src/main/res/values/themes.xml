<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema general-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza los colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo personalizado para el RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo personalizado para TextView del nombre del personaje -->
    <style name="PersonajeNameStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Estilo personalizado para TextView de la descripciÃ³n del personaje -->
    <style name="PersonajeDescriptionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Estilo personalizado para TextView de habilidades del personaje -->
    <style name="PersonajeAbilitiesStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_italic</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Estilo personalizado para no tener Action Bar -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

</resources>